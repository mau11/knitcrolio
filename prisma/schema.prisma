generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Yarn {
  id          Int     @id @default(autoincrement())
  brand       String
  type        String
  color       String
  colorFamily String
  weight      String
  material    String
  care        String?
  lot         String?
  notes       String?
  qty         Int
}
